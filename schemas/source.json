{
    "title": "Open Hunting Data Source",
    "properties": {
        "name": {
            "type": "string",
            "description": "Descriptive name of this dataset",
            "pattern": "[\\w ]+$"
        },
        "country": {
            "type": "string",
            "description": "ISO 3166-1 alpha-2 country code",
            "pattern": "^[A-Z]{2}$"

        },
        "state": {
            "type": "string",
            "description": "State abbreviation",
            "pattern": "^[A-Z]{2}$"
        },
        "attribution": {
            "type": "string",
            "description": "Source file attribution"
        },
        "properties": {
            "type": "object",
            "properties": {
                "id": {"type": "string"},
                "name": {"type": "string"}
            },
            "required": ["id", "name"]
        },
        "species": {
            "type": "array",
            "description": "Array of species",
            "uniqueItems": true
        },
        "filetype": {
            "type": "string",
            "description": "Source file type",
            "enum": [ "shp", "gdb", "kml", "geojson"]
        },
        "url": {
            "type": "string",
            "description": "Source file URL",
            "patter": "^((https|http|ftp|s3):\/\/)?([\\da-zA-Z\\.-]+)\\.([a-zA-Z]{2,16})([\/\\w \\.-\\?\\&]*)*$"
        },
        "filenameInZip": {
            "type": "string",
            "description": "Name of source file in zip file"
        }
    },
    "required": ["country", "state", "attribution", "properties", "species", "filetype", "url"]
}
